{
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "#/*": ["./src/*"],
      "@/*": ["../core/src/*"],
      "fx-flow": ["../core/src"]
    },
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["ESNext"],
    "noErrorTruncation": true
  },
  "include": ["src/**/*.ts", "declare/**/*.d.ts", "../core/src/**/*.ts"]
}

{
  "compilerOptions": {
    "baseUrl": "../core",
    "paths": {
      "@/*": ["./src/*"]
    },
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["ESNext"],
    "noErrorTruncation": true
  },
  "include": ["../core/src/**/*.ts"],
  "reference": ["tsconfig.node.json"]
}

{
  "compilerOptions": {
    "outDir": "dist/cjs",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["ESNext"],
    "noErrorTruncation": true
  },
  "include": ["src/**/*.ts"]
}

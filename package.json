{
  "name": "@niuiic/flow",
  "version": "0.3.7",
  "description": "A functional library for TypeScript/JavaScript",
  "type": "module",
  "main": "dist/cjs/index.js",
  "module": "dist/es/index.js",
  "types": "dist/types/index.d.ts",
  "files": ["dist"],
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "build": "tsc",
    "package": "rollup -c rollup.config.mjs && echo '{\"type\": \"commonjs\"}' > dist/cjs/package.json",
    "release": "pnpm package && release-it",
    "call": "esrun cli",
    "test": "jest",
    "test:coverage": "jest --coverage --coverageReporters=text-lcov | coveralls",
    "lint": "pnpm call lint",
    "docs:dev": "vitepress dev docs",
    "docs:build": "typedoc && pnpm call cleanDoc && vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "author": "niuiic",
  "homepage": "https://flow.niuiic.com",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/niuiic/flow.git"
  },
  "keywords": ["fp", "lazy", "concurrency"],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "devDependencies": {
    "@digitak/esrun": "^3.2.24",
    "@rollup/plugin-typescript": "^11.1.2",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.2",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.45.0",
    "husky": "^8.0.3",
    "jest": "^29.6.1",
    "prettier": "^3.0.0",
    "prettier-plugin-organize-imports": "^3.2.3",
    "release-it": "^16.1.2",
    "rollup": "^3.26.2",
    "rollup-plugin-dts": "^5.3.0",
    "ts-jest": "^29.1.1",
    "tslib": "^2.6.0",
    "typedoc": "0.24.8",
    "typedoc-plugin-markdown": "4.0.0-next.17",
    "typedoc-plugin-missing-exports": "^2.0.0",
    "typedoc-plugin-replace-text": "^3.1.0",
    "typedoc-vitepress-theme": "1.0.0-next.2",
    "typescript": "^5.1.6",
    "vitepress": "1.0.0-beta.5"
  }
}

{
  "private": true,
  "scripts": {
    "build": "turbo build",
    "test": "turbo test",
    "test:coverage": "turbo test:coverage",
    "doc": "turbo build --filter doc",
    "lint": "turbo lint",
    "release": "pnpm build --force && pnpm test && cd packages/core && pnpm release",
    "initialize": "(cd packages/cli && pnpm build) && pnpm i --frozen-lockfile && lefthook install"
  },
  "packageManager": "pnpm",
  "devDependencies": {
    "@types/node": "^20.10.4",
    "eslint": "^8.55.0",
    "lefthook": "^1.5.5",
    "prettier": "^3.1.1",
    "prettier-plugin-organize-imports": "^3.2.4",
    "turbo": "^1.11.2",
    "typescript": "^5.3.3"
  }
}
